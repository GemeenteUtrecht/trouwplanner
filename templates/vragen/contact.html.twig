    <!-- #contact -->
    <div id="contact" class="wrap-container80 bg-white">        
        <!-- .container -->
    	<div class="container">   
            <div class="post-heading-center">
            	<h4>Hulp is onderweg</h4>
                <h2>Waar kunnen we u mee helpen?</h2>
                <p>Komt u er even niet uit? Aarzel dan niet om contact met ons op te nemen.</p>
            </div>
            			
						  
						
            <!-- .row -->
            <div class="row">
                
                <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2" ng-hide="issueResponce || loading">       
                	<form method="post" action="#" class="affa-form-contact">
                    	<div class="submit-status"></div> <!-- submit status -->
                        <input type="hidden" name="type"  ng-model="issue.type" value="contact" />
                        <input type="text" name="voornamen" placeholder="Voornam(en)" ng-model="issue.voornamen" />
                        <input type="text" name="geslachtsnaam" placeholder="Achternaam" ng-model="issue.geslachtsnaam" />
                        <input type="text" name="email" placeholder="E-mailadres" ng-model="issue.email"/>
                        <input type="text" name="telefoonnummer" placeholder="Telefoonnummer" ng-model="issue.telefoonnummer"/>
                        <input type="text" name="titel" placeholder="Titel" ng-model="issue.naam" />
                        <textarea name="message" placeholder="Uw vraag *" ng-model="issue.beschrijving"></textarea>
                        <a href="#" ng-click="sendIssue(issue)" class="btn btn-success btn-lg btn-block"  />Verstuur bericht</a>
                    </form>
                </div>
                <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2" ng-show="issueResponce">                	
                	Bedankt! We nemen zo spoedig mogelijk contact met u op
                </div>
                
						
            </div>
            <!-- .row end -->
            
        </div>
        <!-- .container end -->
        
    </div>
    <!-- #contact end --> 
    
