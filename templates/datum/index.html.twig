{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
        <!-- .container -->
    	<div class="container bg-white">
            
            <!-- .row -->
            <div class="row animation" {% if huwelijk is not empty and huwelijk.primairProduct is not empty %}data-animation="animation-fade-in" data-delay="3400"{% endif %}>
                    	
                    	<div class="post-heading-left ">
                        	<h4>Markeer de datum!</h4>
                            <h2>Wanneer willen jullie trouwen?</h2>
                        </div>
                
                	
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">           
	                	<figure class="col-img40 margin-bottom40 animation" data-animation="animation-fade-in-right">
	                        <img src="images/content/elements/Bank.png" alt="Image">
	                    </figure>
                    </div>
                </div>
                
               
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">

		            	
                	<form method="post" action="{{ path('app_datum_index')}}" class="affa-form-contact">
		            	<div class="submit-status"></div> <!-- submit status -->
						<div class="dateholder">
							<md-datepicker  ng-model="datum" md-placeholder="Voer datum in" md-open-on-focus="" md-date-filter="availabledates"></md-datepicker>
						</div>
		            	<select name="tijd">
						  <option value="10:00">10:00</option>
						  <option value="10:30">10:30</option>
						  <option value="11:00">11:00</option>
						  <option value="10:30">10:30</option>
						</select>
						
						<button type="submit" class="btn btn-success btn-lg btn-block btn-icon"><i class="fas fa-save"></i> Sla datum op</button>
						
                        <input type="text" name="datum" ng-model="datum" disabled/ style="background: transparent;
    border: transparent;
    color: transparent;">
		           </form>
                </div>
                
            </div>
            <!-- .row end -->        
    	    
            
            {% if huwelijk is not empty and huwelijk.primairProduct is not empty %}
             <!-- .row -->
            <div class="row animation save-confirmation" data-animation="animation-bounce-out" data-delay="3000">        	
            	<div class="post-heading-center animation" data-animation="animation-fade-in-down">
                	<h2>Uw keuze {{ huwelijk.primairProduct.name }} is opgeslagen</h2>
               	</div>
                <div class="col-md-12 text-center">
       				<i class="fas fa-check fa-6x animation" data-animation="animation-fade-in-down" ></i>
                </div><!-- /.col -->
            </div><!-- /.row -->      
            {% endif %}    
            
        </div>
        <!-- .container end -->
{% endblock %}
