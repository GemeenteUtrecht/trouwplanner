{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
        <!-- .container -->
    	<div class="container bg-dark">
                    	
                    	<div class="post-heading-left ">
                        	<h4>Markeer de datum!</h4>
                            <h2>Wanneer willen jullie trouwen?</h2>
                        </div>
            
            <!-- .row -->
            <div class="row">
                
                	
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">           
	                	<figure class="col-img40 margin-bottom40 animation" data-animation="animation-fade-in-right">
	                        <img src="images/content/elements/Bank.png" alt="Image">
	                    </figure>
                    </div>
                </div>
                
               
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">

		            	
                	<form method="post" action="#" class="affa-form-contact">
		            	<div class="submit-status"></div> <!-- submit status -->
						<div class="dateholder">
							<md-datepicker ng-model="huwelijk.datum" md-placeholder="Voor datum in" md-open-on-focus="" md-date-filter="availabledates"></md-datepicker>
						</div>
		            	<select ng-model="huwelijk.tijd"  ng-selected="huwelijk.tijd">
						  <option value="10:00">10:00</option>
						  <option value="10:30">10:30</option>
						  <option value="11:00">11:00</option>
						  <option value="10:30">10:30</option>
						</select>
                       <a href="{{ path('app_datum_set') }}"   class="btn btn-success btn-lg btn-block btn-icon" />
						<i class="fas fa-save"></i> 
						Sla datum op
					  </a>
		           </form>
                </div>
                
            </div>
            <!-- .row end -->
            
        </div>
        <!-- .container end -->
{% endblock %}
