{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
 	  <!-- .container -->
    	<div class="container bg-white">
            
            <!-- .row -->
            <div class="row">          
                <div class="col-sm-12 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">
                    	<div class="post-heading-left text-center-sm text-center-xs" >
                        	<h4>Plechtigheid </h4>
                            <h2>{{ product.naam}}</h2>
                        </div>
                        {{ product.samenvatting|raw }}                        
                        <br/>
                        <br/>
                        {% if  huwelijk is defined  and huwelijk%}
                        <a href="{{ path('app_huwelijk_set',{'id':product.id}) }}" class="btn btn-success btn-icon" >
                        	<i class="far fa-calendar-check"></i>
                         	Kies deze Plechtigheid
                         </a>
                         {% else %}
                         <p>U dient eerst in te loggen voordat u deze product kan reserveren</p>
                         {% endif %}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<figure class="col-img40 margin-bottom40 animation">
                        <img  ng-src="{{product.afbeelding.url}}" alt="Image">
                    </figure>
                    
                    beschikbaarheid van deze product
                </div>
                
            </div>
            <!-- .row end -->            
            <!-- .row -->
            <div class="row">
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0">
                	<figure class="margin-bottom40 animation" data-animation="animation-fade-in-left">
                        <iframe width="560" height="315" frameborder="0" allowfullscreen="" src="{{product.film.url}}"></iframe>
                    </figure>
                </div>
                
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<div class="col-text20 margin-bottom20">{{ product.beschrijving|raw }}
                    </div>
                </div>
                
            </div>
            <!-- .row end -->
            
        </div>
        <!-- .container end -->    
{% endblock %}
