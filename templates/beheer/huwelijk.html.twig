{# templates/home/index.html.twig #}

{% extends '/beheer/index.html.twig' %}

{% block admin %}

	<div class="row">
		<div class="col-md-4  bg-gray">
			Partner 1		
		</div>
		<div class="col-md-4">
		<!-- Lets run summernote for the description fields -->	
         <form class="form-horizontal" role="form" action="{{ path('app_beheer_huwelijk', {id:huwelijk.id})}}">
             <div class="form-group">
            	{{ form_label(form.type) }}
             	<div class="col-sm-10">
                	{{ form_widget(form.type) }}
                </div>
              </div>
             <div class="form-group">
            	{{ form_label(form.primairProduct) }}
             	<div class="col-sm-10">
                	{{ form_widget(form.primairProduct) }}
                </div>
              </div>
             <div class="form-group">
            	{{ form_label(form.trouwAmbtenaar) }}
             	<div class="col-sm-10">
                	{{ form_widget(form.trouwAmbtenaar) }}
                </div>
              </div>
             <div class="form-group">
            	{{ form_label(form.locatie) }}
             	<div class="col-sm-10">
                	{{ form_widget(form.locatie) }}
                </div>
              </div>
             <div class="form-group">
             	<div class="col-sm-12">
                    {{ form_row(form.opslaan) }}
                </div>
              </div>        
              {{ form_rest(form) }}
         </form>
		</div>
		
		<div class="col-md-4 bg-gray">
			Partner 2
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 bg-gray">
			Melding
		</div>
		<div class="col-md-4 bg-gray">
			Aanvraag
		</div>
		<div class="col-md-4 bg-gray">
			Documenten
		</div>
	</div>
{% endblock %}
