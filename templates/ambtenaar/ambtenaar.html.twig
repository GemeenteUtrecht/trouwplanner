{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}        
        <!-- .container -->
    	<div class="container bg-white">
            
            <!-- .row -->
            <div class="row">          
                <div class="col-sm-12 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">
                    	<div class="post-heading-left text-center-sm text-center-xs" >
                        	<h4>Trouwambtenaar </h4>
                            <h2>{{ ambtenaar.voornaamen}} {{ ambtenaar.geslachtsnaam}}</h2>
                        </div>
                        
                        <p ng-bind-html="ambtenaar.samenvatting" ></p>
                        <p class="margin-bottom30">Oeh deze is leuk .....</p>
                        <br/>
                        <br/>
                        <a ng-click="setAmbtenaar(ambtenaar)" class="btn btn-success btn-icon" >
                        	<i class="fas fa-circle-notch fa-spin" ng-show="loading"></i>
                        	<i class="far fa-calendar-check" ng-hide="loading"></i>
                         	Reserveer deze trouwambtenaar
                         </a>
                    </div>
                </div>
                                <div class="col-sm-12 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<figure class="col-img40 margin-bottom40 animation">
                        <img  ng-src="{{ambtenaar.afbeelding.url}}" alt="Image">
                    </figure>
                    
                    beschikbaarheid van de Ambtenaar
                </div>
                
            </div>
            <!-- .row end -->            
            <!-- .row -->
            <div class="row">
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0">
                	<figure class="margin-bottom40 animation" data-animation="animation-fade-in-left">
                        <iframe width="560" height="315" frameborder="0" allowfullscreen="" src="{{ambtenaar.film.url}}"></iframe>
                    </figure>
                </div>
                
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<div class="col-text20 margin-bottom20">{{ ambtenaar.beschrijving|raw }}
                    </div>
                </div>
                
            </div>
            <!-- .row end -->
            
        </div>
        <!-- .container end -->
    
{% endblock %}
