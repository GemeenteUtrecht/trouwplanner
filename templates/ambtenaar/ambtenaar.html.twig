{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}        
        <!-- .container -->
    	<div class="container bg-white">
            
            <!-- .row -->
            <div class="row">          
                <div class="col-sm-12 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">
                    	<div class="post-heading-left text-center-sm text-center-xs" >
                        	<h4>Trouwambtenaar </h4>
                            <h2>{{ ambtenaar.voornaamen}} {{ ambtenaar.geslachtsnaam}}</h2>
                        </div>
                        {{ ambtenaar.samenvatting|raw }}     
                        <br/>
                        <br/>
                         {% if huwelijk is defined and huwelijk and huwelijk.trouwAmbtenaar is empty%}
                        <a href="{{ path('app_ambtenaar_set',{'id':ambtenaar.id}) }}" class="btn btn-success btn-icon" >
                        	<i class="far fa-calendar-check"></i>
                         	Reserveer deze trouwambtenaar
                         </a>
                         {% elseif huwelijk is defined and huwelijk and huwelijk.trouwAmbtenaar is not empty and huwelijk.trouwAmbtenaar.ambtenaar.id == ambtenaar.id and (huwelijk.primairProduct is empty or huwelijk.primairProduct.id != 1) %}
                         <a href="{{ path('app_ambtenaar_unset',{'id':ambtenaar.id}) }}" class="btn btn-danger btn-icon" >
                        	<i class="far fa-calendar-times"></i>
                         	Annuleer deze trouwambtenaar
                         </a>
                         {% elseif  huwelijk.primairProduct.id == 1 %}
                         <p>Het type plechtigheid dat u heeft geselecteerd laat geen keuze voor ambtenaar toe, u kunt het type plechtigheid <a href="{{ path('app_huwelijk_index') }}">hier</a> aanpassen.</p>
                         
                         <a href="{{ path('app_reservering_index') }}" class="btn btn-primary btn-icon" >
                        	<i class="far fa-calendar-times"></i>
                         	Ga door naar reservering
                         </a>
                         {% elseif huwelijk is defined and huwelijk and huwelijk.trouwAmbtenaar is not empty and huwelijk.trouwAmbtenaar.ambtenaar.id != ambtenaar.id %}
                         <p>U heeft reeds een andere trouwambtenaar gereserveerd</p>
                         {% else %}
                         <p>U dient eerst in te loggen voordat u deze ambtenaar kan reserveren</p>
                         {% endif %}
                    </div>
                </div>
                                <div class="col-sm-12 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<figure class="col-img40 margin-bottom40 animation">
                        <img  ng-src="{{ambtenaar.afbeelding.url}}" alt="Image">
                    </figure>
                    
                    beschikbaarheid van deze Ambtenaar
                </div>
                
            </div>
            <!-- .row end -->            
            <!-- .row -->
            <div class="row">
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0">
                	<figure class="margin-bottom40 animation" data-animation="animation-fade-in-left">
                        <iframe width="560" height="315" frameborder="0" allowfullscreen="" src="{{ambtenaar.film.url}}"></iframe>
                    </figure>
                </div>
                
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<div class="col-text20 margin-bottom20">{{ ambtenaar.beschrijving|raw }}
                    </div>
                </div>
                
            </div>
            <!-- .row end -->
            
        </div>
        <!-- .container end -->
    
{% endblock %}
