{# templates/home/flow.html.twig #}


{% block body %}   
 	<!-- #flow steps -->
    <div id="flow" class="bg-blue hidden-xs hidden-sm" >        
        <!-- .container -->
    	<div class="container">            
            <!-- .row -->
            <div class="row">
            	{% if huwelijk is defined and huwelijk %}
            	<div class="col-md-12 text-center flow"> 
                    <ul>
                        <li {% if huwelijk is defined and huwelijk.type is defined and huwelijk.product is defined   %}class="completed"{% endif %}>                    
                        	<a href="{{ path('app_huwelijk_index') }}">
                        		<i class="fas fa-ring fa-3x "></i>
                            </a>
                            <br/>Huwelijk
    					</li>
                        <li {% if huwelijk is defined and huwelijk.partners|length >= 2 %}class="completed"{% endif %}>          
                        	<a href="{{ path('app_partner_index') }}">
                            	<i class="fas fa-user-friends fa-3x "></i>
                            </a>
                           <br/> Partner
    					</li>
                        <li {% if huwelijk is defined and huwelijk.locaties is defined  %}class="completed"{% endif %}>            
                        	<a href="{{ path('app_locatie_index') }}" >
                            	<i class="fas fa-building  fa-3x "></i>
                            </a>
                            <br/>Locatie
    					</li>
                        <li {% if huwelijk is defined and huwelijk.ambtenaar is defined  %}class="completed"{% endif %}>             
                        	<a href="{{ path('app_ambtenaar_index') }}" >
                        		<i class="fas fa-user-tie fa-3x "></i>
                            </a>
                            <br/>Ambtenaar
    					</li>
                        <li {% if huwelijk is defined and huwelijk.datum is defined  %}class="completed"{% endif %}>             
                        	<a href="{{ path('app_datum_index') }}">
                        		<i class="fas fa-calendar-day fa-3x"></i>
                            </a>
                            <br/>Datum
    					</li>
                        <li{% if huwelijk is defined and huwelijk.reservering is defined  %}class="completed"{% endif %}>             
                        	<a href="{{ path('app_reservering_index') }}" >
                        		<i class="fas fa-calendar-check fa-3x" ></i>
                            </a>
                            <br/>Reservering
    					</li>
    					<!-- 
                        <li {% if huwelijk is defined and huwelijk.getuigen|length >= 4 %}class="completed"{% endif %}>             
                        	<a href="{{ path('app_getuigen_index') }}">
                            	<i class="fas fa-users  fa-3x"></i>
                            </a>
                            <br/>Getuigen
    					</li> -->
                        <li>             
                        	<a href="{{ path('app_extra_index') }}">
                        		<i class="fas fa-gift fa-3x"></i>
                            </a>
                            <br/>Extras       
    					</li>
                        <li {% if huwelijk is defined and huwelijk.melding is defined  %}class="completed"{% endif %}>      
                        	<a href="{{ path('app_melding_index') }}"> 
                            	<i class="fas fa-envelope fa-3x"></i>
                            </a>
                            <br/>Melding
    					</li>
                        <li {% if huwelijk is defined and huwelijk.betaling is defined  %}class="completed"{% endif %}>      
                        	<a href="{{ path('app_betalen_index') }}">
                        		<i class="fas fa-cash-register fa-3x"></i>
                            </a>
                            <br/>Betalen
    					</li>
                    </ul>          
                </div><!-- .col end -->  
                {% else %} 
            	<div class="col-md-12 text-center">      
                    	<a href="http://digispoof.zaakonline.nl?responce_url={{ absolute_url(path('app_home_login'))|replace({'http://': 'https://'}) }}" class="btn btn-login btn-lg"><span class="fas fa-sign-in-alt"></span> Log hier in om te beginnen</a> 
                </div><!-- .col end -->  
                {% endif %}                   
            </div><!-- .row end -->                  
        </div><!-- .container end -->                
    </div><!-- .bg-blue end -->   
{% endblock %}
