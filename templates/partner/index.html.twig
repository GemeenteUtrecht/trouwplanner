{# templates/partners/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
        <!-- .container -->
    	<div class="container bg-white">            
            <!-- .row-custom -->
            <div class="row-custom">     
                <div class="post-heading-center">
                	<h2>Uw partner</h2>
                </div>
            
                <div class="col-left">
                	<div class="affa-feature-icon"> <!-- 1 -->
                    	<i class="fas fa-user animation" data-animation="animation-fade-in-left"></i>
                        <div class="feature-text">
                        	<h4>{{ huwelijk.partners[0].persoon.voornamen }} {{ huwelijk.partners[0].persoon.geslachtsnaam}}</h4>
                            <p>
	                            Dit bent u zelf
                            </p>
                        </div>
                    </div>
                    
                    <div class="affa-feature-icon"> <!-- 2 -->
                    	<i class="fas fa-home animation" data-animation="animation-fade-in-left"></i>
                        <div class="feature-text">
                        	<h4>Adres en contact</h4>
                            <p ng-hide="huwelijk.partners[0].acceptatieDatum ">{{ huwelijk.partners[0].persoon.voornamen }} {{ huwelijk.partners[0].persoon.geslachtsnaam}} heeft de uitnodiging nog niet geacepteerd.</p>
                            <p ng-show="huwelijk.partners[0].acceptatieDatum">
                            {# huwelijk.partners[0].persoon.verblijfadres.straatnaam }} {{ huwelijk.partners[0].persoon.verblijfadres.huisnummer }} <br />
                            {{ huwelijk.partners[0].persoon.verblijfadres.postcode }} {{ huwelijk.partners[0].persoon.verblijfadres.woonplaats }}<br />
                            {{ huwelijk.partners[0].persoon.emailadres }}<br />
                            {{ huwelijk.partners[0].persoon.telefoonnummer #}
                            </p>
                         </div>
                    </div>
                </div>
                
                <div class="col-center">
                	<figure class="margin-bottom40 animation" data-animation="animation-fade-in-down">
                    	<img src="images/content/elements/MakeItKnown.png"/>
                    </figure>
                </div>
                
                <div class="col-right">
					<!-- NAW gegevens partner 2 -->					
            	    {% if huwelijk.partners|length > 1 %}
                	<div class="affa-feature-icon"> 
                    	<i class="fas fa-user animation" data-animation="animation-fade-in-right"></i>
                        <div class="feature-text">
                        	<h4>{{ huwelijk.partners[1].persoon.voornamen }} {{ huwelijk.partners[1].persoon.geslachtsnaam}}</h4>
                            <p>
	                            {# huwelijk.partners[1].status #} 
                            </p>
                        </div>
                    </div>
                   
					<!-- Overige gegevens partner 2 -->
                    <div class="affa-feature-icon" > <!-- 5 -->
                    	<i class="fas fa-home animation" data-animation="animation-fade-in-right"></i>
                        <div class="feature-text">
                        	<h4>Adres en contact</h4>
                            <p ng-hide="huwelijk.partners[1].acceptatieDatum ">{{ huwelijk.partners[1].persoon.voornamen }} {{ huwelijk.partners[1].persoon.geslachtsnaam}} heeft de uitnodiging nog niet geacepteerd.</p>
                            <p ng-show="huwelijk.partners[1].acceptatieDatum">
                            {# huwelijk.partners[1].persoon.verblijfadres.straatnaam }} {{ huwelijk.partners[1].persoon.verblijfadres.huisnummer }} <br />
                            {{ huwelijk.partners[1].persoon.verblijfadres.postcode }} {{ huwelijk.partners[1].persoon.verblijfadres.woonplaats }}<br />
                            {{ huwelijk.partners[1].persoon.emailadres }}<br />
                            {{ huwelijk.partners[1].persoon.telefoonnummer #}

							</p>
                        </div>
                    </div>        
                    {% else %} 
					<!-- Uitnodigen partner 2 -->
                    <div class="affa-feature-icon"> <!-- 6 -->
                    	<i class="fas fa-envelope animation" data-animation="animation-fade-in-right"></i>
                        <div class="feature-text">
                        	<h4>{% if huwelijk is defined and huwelijk.type is defined  %}Vraag je partner ten  {{ huwelijk.type|capitalize }}{% else %}Nodig je partner uit{% endif %}.</h4>
                            <p>Want dit doe je natuurlijk samen ;)</p>         
                            <br/>                   
		                	<form method="post" action="{{ path('app_partner_index')}}" class="affa-form-contact">
		                    	<div class="submit-status"></div> <!-- submit status -->

								<label for="partner_voornamen">Voornaam(en)</label>
                                <input type="text" name="voornamen" placeholder="John" />
                                <label for="partner_geslachtsnaam">Achternaam</label>
                                <input type="text" name="geslachtsnaam" placeholder="Do" />
                                <label for="partner_email">Email Adres <span class="required">*</span></label>
                                <input type="text" name="emailadres" placeholder="john@do.nl" />
                                <label for="partner_telefoonnummer">Telefoonnummer</label>
                                <input type="text" name="telefoonnummer" nlaceholder="+31 6 12345678" />
                                
 								<button type="submit" class="btn btn-success btn-lg btn-block btn-icon"><i class="far fa-envelope"></i> Per bericht Uitnodigen</button>
 								
		                    </form>
                            <p>- Of -</p>
                            
                        	<a href="" class="btn btn-success btn-lg btn-block btn-icon"><i class="far fa-lock"></i> Uw partner laten inloggen</a>     
                        </div>
                    </div>
                    {% endif %} 
                    
                </div>
                
            </div>
            <!-- .row-custom end -->           
        </div>
        <!-- .container end -->    
    
{% endblock %}
