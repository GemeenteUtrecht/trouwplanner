{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    {% if huwelijk is not empty and huwelijk.aanvraag is empty  %}
	    {{ include('home/nietgereserveerd.html.twig') }}	
    {% endif %}    
 	 <!-- .container -->
    	<div class="container bg-white">            
            <!-- .row -->
            <div class="row">
                
                <div class="d-none d-md-block col-md-4 col-md-offset-0 hidden-xs hidden-sm">
                	<figure class="margin-bottom40 animation animated animation-fade-in-left" data-animation="animation-fade-in-left">
                    	<img src="images/content/elements/Gellukig.png" alt="Image">
                    </figure>
                </div>
                
                <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-0">
                	<div class="col-text20 margin-bottom20">
                    	<div class="post-heading-left">
                            <h2>Wat is al gedaan en wat moet er nog gebeuren?</h2>
                            <p>We kunnen ons goed voorstellen dat er nogal wat op jullie afkomt bij het plannen van een {{ huwelijk.type }}, daarom hebben we alles op een rij gezet voor jullie. Een handig overzicht van wat er moet gebeuren, maar ook wat er al is gedaan.</p>
                            <p>Legenda
                            	<i class="fa far fa-square"></i> Nog te doen
                            	<i class="fa fas fa-check"></i> Gedaan
                            </p>
                        </div><!-- /.post-heading-left -->
                        <div class="list-row"><div class="list-col">
                        		Gedaan
                                <ul class="list-icon">      
                                    <!--  Trouwdatum -->                        
                                    <li>
                                    	{% if huwelijk is not empty and huwelijk.datum is not empty and huwelijk.tijd is not empty %}
                                    	<i class="fa fas fa-check"></i>{{ huwelijk.type|capitalize }} datum: {{ huwelijk.datum |date("Y-d-m") }}
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> Kies <a href="{{ path('app_datum_index') }}" >hier</a> uw boogde {{ huwelijk.type }} datum
                                    	{% endif %}                                 	
                                   	</li>
                                    <!--  Type -->
                                    <li>
                                    	<i class="fa fas" ></i>
                                    	{% if huwelijk is defined and huwelijk.type is not empty%}
                                    	<i class="fa fas fa-check"></i> Type huwelijk: {{ huwelijk.type }}<i class="fa fas fa-check"></i> 
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> Kies <a href="{{ path('app_huwelijk_index') }}">hier</a> uw type huwelijk of partnerschap
                                    	{% endif %}
                                    	
                                    </li>
                                    <!-- Product -->
                                    <li>
                                    	{% if huwelijk is defined and huwelijk.primairProduct  is not empty %}
                                    	<i class="fa fas fa-check"></i>Plechtigheid: {{ huwelijk.primairProduct.naam }}
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> Kies <a href="{{ path('app_huwelijk_index') }}" >hier</a> uw plechtigheid door
                                    	{% endif %}                                 	
                                    </li>
                                   
                                    <!-- Partners -->
                                    <li>
                                    	{% if huwelijk is not empty and huwelijk.partners|length >= 2 %}
                        				<i class="fa fas fa-check"></i> U heeft {{ huwelijk.partners[1].persoon.voornamen }} {{ huwelijk.partners[1].persoon.geslachtsnaam}} uitgenodigd     
                                    	{% else %}
                                    	<i class="far fa-square" ></i> Nodig <a href="{{ path('app_partner_index') }}">hier</a> uw partner uit
                                    	{% endif %}
                                    </li>
                                    <!-- locatie -->
                                    <li>
                                    	{% if huwelijk is defined and huwelijk.locatie is not empty %}
                                    	<i class="fa fas fa-check"></i> Locatie: {{ huwelijk.locatie.locatie.naam }}
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> U heeft nog  geen locatie doorgegeven, doe dat <a href="{{ path('app_locatie_index') }}">hier</a>
                                    	{% endif %}
                                    </li>
                                    <!-- Trouw Ambtenaar -->
                                    <li>
                                    	{% if huwelijk is defined and huwelijk.trouwAmbtenaar is not empty %}
                                    	<i class="fa fas fa-check"></i> Ambtenaar: {{  huwelijk.trouwAmbtenaar.ambtenaar.voornaamen }} {{ huwelijk.trouwAmbtenaar.ambtenaar.geslachtsnaam }}
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> U heeft nog  geen trouwambtenaar doorgegeven, doe dat <a href="{{ path('app_ambtenaar_index') }}">hier</a>
                                    	{% endif %}
                                    </li>
                                    
                                	</ul>
                            	</div><!-- /.list-col -->   
                        	<div class="list-col">
                            	Nog te doen
                            	<ul class="list-icon">
                                    {% if huwelijk is not empty and huwelijk.aanvraag  is not empty   %}
                                    <li>
                                    	<i class="fa fas fa-check"></i> Uw reservering: {{ huwelijk.aanvraag }} 
                                    </li>
                                    <li>
                                        <i class="fas fa-exclamation"></i><u>Uw reservering is nog xx dagen geldig</u>
                                    </li>
                                    {% else %}
                                    <li>
                                    	<i class="fa far fa-square"></i> U heeft nog  geen reservering gedaan
                                    </li>
                                    {% endif %}
                                    <!-- 
                                    <li>
                                    	{% if huwelijk is defined and huwelijk.melding is defined and huwelijk.melding %}
                                    	<i class="fa fas fa-check"></i> De status van uw melding: {{ huwelijk.melding }} 
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> U heeft nog geen melding gedaan
                                    	{% endif %}
                                    </li>
                                    <li>
                                    	{% if huwelijk is defined and huwelijk.betaling is defined and huwelijk.betaling  %}
                                    	<i class="fa fas fa-check"></i> De status van uw betaling: {{ huwelijk.aanvraag }} 
                                    	{% else %}
                                    	<i class="fa far fa-square"></i> U heeft nog geen betaling gedaan
                                    	{% endif %}
                                    </li>
                                     -->
                                </ul>
                            </div>     
                        </div><!-- /.list-row -->
                        {% if huwelijk is not empty and huwelijk.aanvraag  is empty   %}
                      	<div class="btn-section textcenter animation" data-animation="animation-fade-in-up">
    		            	<a href="{{ path('app_reservering_send') }}" class="btn btn-primary btn-icon" >
    							<i class="fas fa-share-square"></i> 
    			            	Maak een reservering
    		           		</a>
                    	</div><!-- /.btn-section -->      
                        {% else %}
                      	<div class="btn-section textcenter animation" data-animation="animation-fade-in-up">
    		            	<a href="{{ path('app_reservering_cancel') }}" class="btn btn-danger btn-icon" >
    							<i class="fas fa-times"></i>
    			            	Annuleer uw reservering
    		           		</a>
                    	</div><!-- /.btn-section -->                              
                        {% endif %}
                	</div><!-- /.col -->           
                </div><!-- /.row -->           
            </div><!-- ./container --> 
          
    
{% endblock %}
